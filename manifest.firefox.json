{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "Switch Tab",
  "version": "0.0.1",
  "description": "Switch Tab is a chrome extension that allows you to switch between tabs quickly and easily.",
  "author": "Nischal Dahal",
  "homepage_url": "https://github.com/broisnischal/switch-tab",
  "background": {
    "scripts": [
      "src/background/index.js"
    ],
    "type": "module"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "background"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/background/hot-reload-client.js"
      ]
    },
    {
      "js": [
        "src/contentScript/index.js"
      ],
      "css": [
        "src/styles/styles.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "open-tab-switcher": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Open tab switcher UI"
    }
  }
}